#
# Reinit the owner of all files of the current vhost to the SSH user
#
# Usage: vhost-chown-reinit
#

if [ "${USER}x" != 'rootx' ]; then
    sudo ${BASH_SOURCE[0]:-$0}
    exit $?
fi

source $(dirname ${BASH_SOURCE[0]:-$0})/../lib/vhost.bash

GetVhostDirFromCurrentDir
if [ "x${VHOST_DIR}" = "x" ] ; then
    echo -e "Currently not in a existing vhost."
    exit 1
fi
GetVhostVarsFromVhostDir

if ((${VHOST_HAVE_PHP})); then
    # ensure php tmp dir
    mkdir -p ${VHOST_DIR}/var/tmp
    chmod 771 ${VHOST_DIR}/var ${VHOST_DIR}/var/tmp
fi

chown -R ${VHOST_USER}:${VHOST_GROUP} ${VHOST_DIR}

#ensure minimal chmod
chmod -R o-w ${VHOST_DIR}
chmod o-r ${VHOST_DIR}
if [ -e ${VHOST_DIR}/.env.local ]; then
    chmod o-rwx ${VHOST_DIR}/.env.local
fi
if [ -e ${VHOST_DIR}/db.config.php ]; then
    chmod o-rwx ${VHOST_DIR}/db.config.php
fi