#
# Create a dump for a given vhost created with kclie wizard
#

source $(dirname ${BASH_SOURCE[0]:-$0})/../lib/vhost.bash

GetVhostVarsFromAuto $1

if !((${VHOST_HAVE_DB})); then
    echo -e "\"${VHOST_NAME}\" is not a vhost with a DB"
    exit 1
fi

if [ ! -w "${VHOST_DIR}" ]; then
    echo -e "${VHOST_DIR} is not writable"
    exit 1
fi

echo Dump DB ${VHOST_DB_NAME} \> ${VHOST_DB_DUMP}
mysqldump -f ${VHOST_DB_NAME} | gzip -9f > ${VHOST_DB_DUMP}
chmod 600 ${VHOST_DB_DUMP}
chown ${VHOST_USER} ${VHOST_DB_DUMP}